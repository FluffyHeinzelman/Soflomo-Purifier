{
    "name": "soflomo/purifier",
    "description": "HTML Purifier as filter and view helper for Zend Framework 2 ",
    "license": "BSD-3-Clause",
    "type": "library",
    "keywords": [
        "zf2",
        "html",
        "purify",
        "purifier",
        "filter"
    ],
    "homepage": "https://github.com/juriansluiman/Soflomo-Purifier",
    "authors": [
        {
            "name": "Jurian Sluiman",
            "email": "jurian@soflomo.com",
            "homepage": "http://soflomo.com"
        }
    ],
    "require": {
        "php": ">=5.5",
        "zendframework/zend-filter": "^2.5",
        "ezyang/htmlpurifier": ">=4.5.0"
    },
    "require-dev": {
        "zendframework/zend-servicemanager": "^2.5",
        "zendframework/zend-view": "^2.5",
        "zendframework/zend-modulemanager": "^2.5",
        "phpunit/phpunit": "^4.8",
        "php-vfs/php-vfs": "^1.3"
    },
    "suggest": {
        "zendframework/zend-servicemanager": "For creating the filter with the SM factory",
        "zendframework/zend-view": "For using the purifier as view helper",
        "zendframework/zend-modulemanager": "To load the filter as a module in a ZF2 application"
    },
    "autoload": {
        "psr-0": {
            "Soflomo\\Purifier": "src/"
        },
        "classmap": [
            "./Module.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Soflomo\\Purifier\\Test\\": "test/"
        }
    },
    "bin": [
        "bin/purifier-generate-standalone"
    ]
}
